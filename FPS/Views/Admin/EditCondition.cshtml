@model FPS.DataModel.tblCondition

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend class="invisible">Condition </legend>
        <label>@ViewBag.errormsg</label>

        <div class="adminPopupBox">
            <h3>Edit Condition</h3>


            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label adminForm-Label" })
                @Html.EditorFor(model => model.Name, new { @class = "form-control form-control-fps", placeholder = "Type Carrier details" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
           

            <div class="form-group">
                @Html.LabelFor(model => model.Value, new { @class = "col-md-2 control-label adminForm-Label" })
                @Html.TextBoxFor(model => model.Value, new { @class = "form-control form-control-fps", @readonly = true })
                @Html.ValidationMessageFor(model => model.Value)
            </div>
            
            <p>
                <input class="btn-Standard btn-normal-full-with" type="button" value="Update" onclick="UpdateCondition()" />
            </p>

            <div class="btn-StandardReverse btn-normal-full-with-bg">
                @Html.ActionLink("Close", "AddCondition")
            </div>
        </div>
    </fieldset>
}


<script type="text/javascript">
    function UpdateCondition() {
        var cName = $("#Name").val();
        var id = $("#Value").val();
        var conditions = {
            "Name": cName, "id": id
        };

        $.post('EditCondition', conditions,
        function (data) { location = location.href; }, 'json');
    }
</script>