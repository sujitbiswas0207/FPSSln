@model FPS.DataModel.tblCommodityCategory

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend class="invisible">Comodity Category</legend>
        <label>@ViewBag.errormsg</label>

        <div class="adminPopupBox">
            <h3>Add Comodity Category</h3>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label adminForm-Label" })
                @Html.EditorFor(model => model.Name, new { @class = "form-control form-control-fps", placeholder = "Type Carrier details" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            
            <p>
                <input class="btn-Standard btn-normal-full-with" type="button" value="Create" onclick="SaveCarriers()" />
            </p>

            <div>
                <input type="button" class="btn-StandardReverse btn-normal-full-with-bg" value="Close" onclick="CloseWindow()" />
            </div>
        </div>
    </fieldset>
}

<script type="text/javascript">
    function SaveCarriers() {
        var cName = $("#Name").val();

        var Carriers = { "Name": cName };

        $.post('CreateCommodityCategory', Carriers,
        function (data) { location = location.href; }, 'json');

    }

    function CloseWindow() {
        location = location.href;
    }
</script>